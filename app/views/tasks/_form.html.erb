<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :締切日 %><br>
    <%= f.date_select :due_date %>
  </div>
  <div class="field">
    <%= f.label :カテゴリー %><br>
    <%= f.collection_select :category_id, Category.all, :id, :categoryname %>
  </div>
  <div class="field">
    <%= f.label :やること %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :状況 %><br>
    <%= f.check_box :doue %>
  </div>
  <div class="field">
    <%= f.label :ユーザー %><br>
    <%= f.collection_select :user_id, User.all, :id, :username %>
  </div>
  <div class="actions">
    <%= submit_tag "　登録　" %>
  </div>
<% end %>
